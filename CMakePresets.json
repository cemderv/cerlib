{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CPM_SOURCE_CACHE": "${sourceDir}/build/cpm_source_cache",
        "CERLIB_ENABLE_TESTS": "ON"
      }
    },
    {
      "name": "dev",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CERLIB_ENABLE_ADDRESS_SANITIZER": "ON",
        "CERLIB_ENABLE_VERBOSE_LOGGING": "OFF"
      }
    },
    {
      "name": "release-native",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CERLIB_ENABLE_CLANG_TIDY": "ON"
      }
    },
    {
      "name": "release-wasm",
      "inherits": "release-native",
      "generator": "Ninja",
      "toolchainFile": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
      "cacheVariables": {
        "CERLIB_ENABLE_CLANG_TIDY": "OFF",
        "CERLIB_ENABLE_TESTS": "OFF"
      }
    },
    {
      "name": "release-android",
      "inherits": "release-native",
      "generator": "Ninja",
      "toolchainFile": "$env{ANDROID_SDK}/ndk/$env{ANDROID_NDK_VERSION}/build/cmake/android.toolchain.cmake",
      "cacheVariables": {
        "CERLIB_ENABLE_TESTS": "OFF",
        "ANDROID_ABI": "arm64-v8a",
        "ANDROID_PLATFORM": "android-26",
        "ANDROID_STL": "c++_shared"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-base",
      "hidden": true,
      "jobs": 12
    },
    {
      "name": "dev",
      "inherits": "build-base",
      "configurePreset": "dev"
    },
    {
      "name": "release-native",
      "inherits": "build-base",
      "configurePreset": "release-native"
    },
    {
      "name": "release-wasm",
      "inherits": "build-base",
      "configurePreset": "release-wasm"
    },
    {
      "name": "release-android",
      "inherits": "build-base",
      "configurePreset": "release-android"
    }
  ],
  "workflowPresets": [
    {
      "name": "dev",
      "steps": [
        {
          "type": "configure",
          "name": "dev"
        },
        {
          "type": "build",
          "name": "dev"
        }
      ]
    },
    {
      "name": "release-native",
      "steps": [
        {
          "type": "configure",
          "name": "release-native"
        },
        {
          "type": "build",
          "name": "release-native"
        }
      ]
    }
  ]
}